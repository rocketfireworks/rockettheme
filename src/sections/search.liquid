<div id="content">
  {% include 'product-confirm-popup' %}
  <div class="container search-page">
	<div class="title clearfix">
    <h1>{{ 'general.search.placeholder' | t }}</h1>
  </div>
  <div class="page_content search_page_content">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="sfbox box-search">
            <form action="/search" method="get" role="search">
              {% if product_only_search == "search_products_only" %}
              <input type="hidden" name="type" value="product">
              {% endif %}
              <div class="frm row">
                <div class="col-sm-9 col-xs-8"><input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.submit' | t }}" class="txtbox" aria-label="{{ 'general.search.submit' | t }}"></div>
                <div class="col-sm-3 col-xs-4"><button class="btn_c" type="submit" value="{{ 'general.search.submit' | t }}">{{ 'general.search.submit' | t }}</button></div>
              </div>
            </form> 
        </div>
      </div>
    </div>
  </div>
  
  <script>
    window._usf_featured_product = `{{ featured_product | json }}`;
    window._usfGlobalSettings = {
      custom_price0_text: {{ settings.custom_price0_text | json }},
      align_height: {{ settings.align_height | json }},
      collection_height: {{ settings.collection_height | json }},
      hide_price0_box_and_button: {{ settings.hide_price0_box_and_button | json }},
    };
    window._usfSectionSettings = {
      collection_overlay: {{ section.settings.collection_overlay }},
      show_product_quantity: {{ section.settings.show_product_quantity | json }},
      show_product_reviews_stars: {{ section.settings.show_product_reviews_stars | json }},
      show_grid_type: {{ section.settings.show_grid_type | json }},
      collection_overlay: {{ section.settings.collection_overlay | json }},
      show_smart_checkout: {{ section.settings.show_smart_checkout | json }},
    };
    window._usfVideoIcon = {{ 'video-icon2.png' | asset_url | json }};
    window._usf_grid_item_width = {{ grid_item_width | json }};
    window._usf_qty_error = {{ 'products.product.maximum_quantity_error' | t | json }};
  </script>

      
  <div class="product_c">
      
    <div id="usf_container"></div>
          
    </div>
  </div>
</div>

<!-- END USF -->

{% comment %}USF
{% assign product_only_search =  settings.search_type_query %}
{% assign grid_results = true %}
{% if product_only_search == "search_products_only" %}
{% assign grid_results = true %}
{% else %}
{% assign grid_results = false %}
{% endif%}

<div id="content">
  {% include 'product-confirm-popup' %}
  <div class="container search-page">

    {% if search.performed %}
    {% paginate search.results by 18 %}

    {% if search.results_count == 0 %}
    <div class="title clearfix">
      <h1>{{ 'general.search.search_heading' | t }}</h1>
    </div>
    <div class="page_content">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="sfbox box-search">
            <div class="rte">
              <p>{{ 'general.search.no_results_html' | t: terms: search.terms }}</p>
              <h2>{{ 'general.search.search_again' | t }}</h2>
              <form action="/search" method="get" role="search">

                <input type="hidden" name="type" value="product">
                <div class="frm">
                  <div class="col-sm-9"><input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.submit' | t }}" class="txtbox" aria-label="{{ 'general.search.submit' | t }}"></div>
                  <div class="col-sm-3"><button class="btn_c" type="submit" value="{{ 'general.search.submit' | t }}">{{ 'general.search.submit' | t }}</button></div>
                </div>
              </form> 
            </div>
          </div>
        </div>
      </div>
    </div>
    {% else %}
    <div class="product_c">
      <div class="title">
        <h1>{{ 'general.search.search_heading' | t }}: <span class="search-term">"{{ search.terms }}"</span></h1>
      </div>

      {% if grid_results == false %}
      <div class="search-list mt20 search-infinite-wrapper">
        {% for item in search.results %}
        {% if item.object_type == 'product' %}
          {% include 'search-result-grid' %}
        {% endif %}
        {% endfor %}

        {% for item in search.results %}
        {% if item.object_type == 'page' %}
          {% include 'search-result-page' %}
        {% endif %}
        {% endfor %}
      </div>
      {% else %}
      <div class="search-infinite-wrapper search-result-list">
      {% for product in search.results %}
      {% include 'search-result-list' %}
      {% endfor %}
      </div>
      {% endif %}
      
      {% if settings.use_infinite_scroll%}
      {% if paginate.next.url %}
      <div class="load-more__icon"></div>
      <div class="js-load-more load-more">
        <a href="{{ paginate.next.url }}" data-no-instant class="load-more__btn action_button continue-button">{{ 'collections.general.load_more' | t }}</a>
      </div>
      {% endif %}
      {% endif %}
        
      {% endif %}


      {% unless settings.use_infinite_scroll%}
        {% if paginate.pages > 1 %}
        	{% include 'pagination-custom' %}
        {% endif %}
      {% endunless %}
      
      {% endpaginate %}


      {% else %}

      <div class="title clearfix">
        <h1>{{ 'general.search.placeholder' | t }}</h1>
      </div>
      <div class="page_content search_page_content">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <div class="sfbox box-search">
                <form action="/search" method="get" role="search">
                  {% if product_only_search == "search_products_only" %}
                  <input type="hidden" name="type" value="product">
                  {% endif %}
                  <div class="frm row">
                    <div class="col-sm-9 col-xs-8"><input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.submit' | t }}" class="txtbox" aria-label="{{ 'general.search.submit' | t }}"></div>
                    <div class="col-sm-3 col-xs-4"><button class="btn_c" type="submit" value="{{ 'general.search.submit' | t }}">{{ 'general.search.submit' | t }}</button></div>
                  </div>
                </form> 
            </div>
          </div>
        </div>
      </div>

      {% endif %}    
    </div>
  </div>
</div>
USF{% endcomment %}
