{% assign blockCount =  section.blocks | size %}
<div class="ctablock container gallery_container" data-count= "{{blockCount}}" data-section-id="{{ section.id }}" data-section-type="featured-images-section">
    <div class="row">
      {% if blockCount >= 1 %}
        {% for block in section.blocks %}
          <div class="{% if blockCount == 3 %}col-sm-4{% elsif blockCount == 2 or blockCount > 3 %}col-sm-6{% elsif blockCount == 1 %}col-sm-12{% endif %}">
            <div class="ctablock-container">
              <a href="{{ block.settings.link }}">
                {% if block.settings.image %}
                <div class="ctablock-image">
                  <img src="{{block.settings.image | img_url:'300x'}}"  alt="{% if block.settings.image.alt != blank %} {{block.settings.image.alt}} {% else %}{{ block.settings.image_title | strip_html }} {% endif %}" srcset="{{ block.settings.image | img_url: img_size_first }} 1x, {{ block.settings.image | img_url: img_size_first, scale: 2 }} 2x, {{ block.settings.promo | img_url: img_size_first, scale: 3 }} 3x" >
                </div>
                {% else if %}
                  {{ "collection-1" | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                <div class="ctablock-content">
                  <h2 class="ctablock-title">
                    <span class="ctablock-title-icon"><i class="fas fa-chevron-right"></i></span>
                    {{ block.settings.title }}
                  </h2>
                  <p class="ctablock-tagline">{{ block.settings.tagline }}</p>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
</div>
{% schema %}
{
  "name": "CTA Block",
  "max_blocks": 3,
  "settings": [
  ],
  "blocks": [
    {
      "type": "select",
      "name": "Tile",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Tile image"
        },
        {
          "id": "image_title",
          "type": "text",
          "label": "Image Title",
          "default": "Image Title"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Title",
          "default": "Title"
        },
        {
          "id": "tagline",
          "type": "text",
          "label": "Tagline",
          "default": "Tagline"
        },
        {
          "id": "link",
          "type": "url",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CTA Block",
      "category": "Image"
    }
  ]
}
{% endschema %}

