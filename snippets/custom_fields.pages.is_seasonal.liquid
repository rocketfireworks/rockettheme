{% if page.metafields.custom_fields["is_seasonal"] != blank %}
  <div class="custom-field custom-field__is-seasonal custom-field__type--checkbox">
    <h3 class="custom-field--title">Is Seasonal</h3>
    <div class="custom-field--value">
      {% if page.metafields.custom_fields["is_seasonal"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}