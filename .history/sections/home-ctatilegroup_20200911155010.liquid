{% assign blockCount =  section.blocks | size %}
<div class="ctatile container gallery_container" data-count= "{{blockCount}}" data-section-id="{{ section.id }}" data-section-type="featured-images-section">
    <div class="row">
      {% if blockCount >= 1 %}
        {% for block in section.blocks %}
          <div class="{% if blockCount == 3 %}col-sm-4{% elsif blockCount == 2 or blockCount > 3 %}col-sm-6{% elsif blockCount == 1 %}col-sm-12{% endif %}">
              <div class="ctatile-container">
                {% if block.settings.image %}
                <div class="ctatile-image">
                  <img src="{{block.settings.image | img_url:'master'}}"  alt="{% if block.settings.image.alt != blank %} {{block.settings.image.alt}} {% else %}{{ block.settings.image_title | strip_html }} {% endif %}">
                </div>
                {% else if %}
                  {{ "collection-2" | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                <div class="ctatile-content">
                  <div>
                    <h2 class="ctatile-title">{{ block.settings.heading }}</h2>
                    <p class="ctatile-tagline">{{ block.settings.tagline }}</p>
                  </div>
                  <div class="ctatile-button">
                    <a href="{{ block.settings.link }}">{{ block.settings.linktext }}</a>
                  </div>
                </div>
              </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
</div>
{% schema %}
{
  "name": "CTA Tile Group",
  "max_blocks": 3,
  "settings": [
  ],
  "blocks": [
    {
      "type": "select",
      "name": "CTA Tile",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Tile image"
        },
        {
          "id": "image_title",
          "type": "text",
          "label": "Image Title",
          "default": "Image Title"
        },
        {
          "id": "heading",
          "type": "text",
          "label": "Heading",
          "default": "Heading goes here"
        },
        {
          "id": "tagline",
          "type": "text",
          "label": "Tagline",
          "default": "Tagline goes here"
        },
        {
          "id": "link",
          "type": "url",
          "label": "Button link"
        },
        {
          "id": "linktext",
          "type": "text",
          "label": "Button text",
          "default": "Click here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CTA Tile Group",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% stylesheet 'scss' %}
.ctatile {
  margin: 30px auto;
  .ctatile-container {
    box-shadow: 0 3px 3px #d1d7d7;
    background-color: #f7f7f7;
    margin: 10px;
    font-size: 16px;
    @media (max-width: 1300px) {
      font-size: 14px;
    }
    .ctatile-image {
      display: flex;
      height: 20em;
      width: auto;
      overflow: hidden;
      img {
        object-fit: cover;
      }
      svg {
        
      }
    }
    .ctatile-content {
      padding: 0.8em 1.2em;
      display: grid;
      grid-template-columns: auto auto;
      justify-content: space-between;
      align-items: center;
    }
    .ctatile-title {
      font-size: 1.3em;
      font-weight: 800;
      text-transform: uppercase;
      color: #16142c;
      margin-bottom: 0.3em;
    }
    .ctatile-tagline {
      font-size: 0.8em;
      font-weight: 600;
      color: #16142c;
    }

    .ctatile-button {
      justify-self: end;
      a {
        color: #16142c;
        border: 2px solid #5bb3c8;
        padding: 0.4em 1.5em;
        font-size: 1em;
        font-weight: 700;
        text-align: center;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 0.3s;
      }
    }
  }
}
{% endstylesheet %}

