  li {
    color: #16142C;
  }
  .location-summary {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-flow: wrap;
    &>:first-child {
      padding: 0 20px 20px 20px;
      flex: 50%;
    }
    &>:last-child {
