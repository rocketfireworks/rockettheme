/*------------------------------------------------------------------
Ancillary Page Banner
-------------------------------------------------------------------*/

#banner-container {
  margin-bottom: 40px;
  background-size: cover;
  background-position: center;
  &>div {
    padding-top: 2em;
    padding-bottom: 2em;
    &>div {
      display: inline-block;
      padding: 15px 40px 25px;
      background-color: #16142cbb;
      font-weight: 800;
      line-height: 1;
      font-size: 16px;
      text-transform: uppercase;
    }
  }
  .banner-subtitle {
    color: white;
    font-size: 1.875em;
    line-height: 1;
    margin: 0.1em 0;
  }
  .banner-title {
    color: #fdda54;
    font-size: 2.5625em;
    margin: 0.1em 0;
    text-shadow: 2px 2px 3px #16142c;
  }
  .banner-cta {
    margin-top: 1em;
    color: white;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    &>:first-child {
      margin-right: 0.8em;
      color: white;
    }
    .banner-cta-links {
      display: flex;
      flex-wrap: wrap;
    }
    a {
      background-color: #3dbfde;
      border: 1px solid #3dbfde;
      color: black;
      padding: 8px 20px;
      margin: 0.35em 0.8em 0.35em 0;
      font-weight: 700;
      text-align: center;
      transition: all 0.3s;
      &:hover, &:focus {
        background-color: #fff;
        text-decoration: none;
      }
    }
    .details {
      margin-top: 0.2em;
    }
  }
  @media (max-width: 640px) {
    &>div>div {
      font-size: 14px;
    }
  }
  .details {
    display: block;
    width: 100%;
    color: white;
    font-weight: normal;
    text-transform: none;
    margin-top: 0.5em;
  }
}

