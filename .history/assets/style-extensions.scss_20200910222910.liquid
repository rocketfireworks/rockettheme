/*------------------------------------------------------------------
General
-------------------------------------------------------------------*/
html {
  scroll-behavior: smooth;
}
.text-dark {
  color: #16142C;
  p, li {
    color: #16142C;
  }
}
.text-important {
  color: #C94344;
}
.text-uppercase {
  text-transform: uppercase;
}
.layout-inline {
  display: flex;
  align-items: center;
  &>:first-child {
  	margin-right: 10px;
  }
}
.photobox {
  border-radius: 30px;
/*   border: 3px solid #ffda57; */
  box-shadow: 3px 3px 3px #d1d7d7;
  margin-bottom: 5px;
}
.rte .contact-page a:hover {
  text-decoration: underline !important;
}
.rte .ancillary-page a:hover {
  text-decoration: underline !important;
}
.videoWrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 */
  height: 0;
}
.videoWrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.intro-p {
  margin-left: 15px;
  margin-right: 15px;
}

/*------------------------------------------------------------------
Custom Page Template
-------------------------------------------------------------------*/

.custom-container {
  &.rte {
    padding: 0;
    p, div, li {
      color: #16142c;
    }
  }
  .custom-title {
    display: none;
  }
  .checkmark {
    li {
      list-style: none;
      font-weight: bold;
      font-size: 18px;
      i {
        margin-right: 5px;
      }
    }
  }
}
.container-narrow {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  padding: 0 20px;
  @media (max-width: 768px) and (min-width: 480px) {
    max-width: 748px;
  }
  @media (min-width: 768px) {
    width: 750px;
  }
  @media (min-width: 992px) {
    width: 970px;
  }
  @media (min-width: 1200px) {
    width: 100%;
    max-width: 1200px;
  }
}

/*------------------------------------------------------------------
Location Page
-------------------------------------------------------------------*/
#ontario-retail-outlets {
  #content {
  	padding-top: 0;
  }
}
.location-master {
  p {
    color: #16142C;
  }
  ul, ol {
    margin-top: 10px
